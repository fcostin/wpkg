<?xml version="1.0" encoding="UTF-8"?>

<!--
  NOTES
  1) We set Everyone=F permissions on the LP install folder
-->

<packages>

<package
  id="loadplanner"
  name="LoadPlanner"
  revision="3850"
  reboot="false"
  priority="10">

  <depends package-id="tools_permissions" />

  <check type="uninstall" condition="exists" path="LoadPlanner 3.8.6 Update" />

  <install cmd='msiexec %MSI% /i "%SOFTWARE%\LoadPlanner\LoadPlanner.msi"' />
  <install cmd='msiexec %MSI% /i "%SOFTWARE%\LoadPlanner\LoadPlanner 3860.msi"' />
  <install cmd='assoc .pjc=LoadPlanner' />
  <!-- 32 bit host -->
  <install cmd='IF EXIST "%PROGRAMFILES%\LoadPlanner" XCOPY "%SOFTWARE%\LoadPlanner\*.mdb" "%PROGRAMFILES%\LoadPlanner" /Y' />
  <install cmd='IF EXIST "%PROGRAMFILES%\LoadPlanner" ftype LoadPlanner="%PROGRAMFILES%\LoadPlanner\LpMultiP.exe" "%1"' />
  <install cmd='IF EXIST "%PROGRAMFILES%\LoadPlanner" cacls "%PROGRAMFILES%\LoadPlanner" /E /T /G Everyone=f >NUL' />
  <!-- 64 bit host -->
  <install cmd='IF EXIST "%PROGRAMFILES(x86)%\LoadPlanner" XCOPY "%SOFTWARE%\LoadPlanner\*.mdb" "%PROGRAMFILES(x86)%\LoadPlanner" /Y' />
  <install cmd='IF EXIST "%PROGRAMFILES(x86)%\LoadPlanner" ftype LoadPlanner="%PROGRAMFILES(x86)%\LoadPlanner\LpMultiP.exe" "%1"' />
  <install cmd='IF EXIST "%PROGRAMFILES(x86)%\LoadPlanner" cacls "%PROGRAMFILES(x86)%\LoadPlanner" /E /T /G Everyone=f >NUL' />

  <upgrade cmd='msiexec %MSI% /i "%SOFTWARE%\LoadPlanner\LoadPlanner.msi"' />
  <upgrade cmd='msiexec %MSI% /i "%SOFTWARE%\LoadPlanner\LoadPlanner 3860.msi"' />
  <upgrade cmd='assoc .pjc=LoadPlanner' />
  <!-- 32 bit host -->
  <upgrade cmd='IF EXIST "%PROGRAMFILES%\LoadPlanner" XCOPY "%SOFTWARE%\LoadPlanner\*.mdb" "%PROGRAMFILES%\LoadPlanner" /Y' />
  <upgrade cmd='IF EXIST "%PROGRAMFILES%\LoadPlanner" ftype LoadPlanner="%PROGRAMFILES%\LoadPlanner\LpMultiP.exe" "%1"' />
  <upgrade cmd='IF EXIST "%PROGRAMFILES%\LoadPlanner" cacls "%PROGRAMFILES%\LoadPlanner" /E /T /G Everyone=f >NUL' />
  <!-- 64 bit host -->
  <upgrade cmd='IF EXIST "%PROGRAMFILES(x86)%\LoadPlanner" XCOPY "%SOFTWARE%\LoadPlanner\*.mdb" "%PROGRAMFILES(x86)%\LoadPlanner" /Y' />
  <upgrade cmd='IF EXIST "%PROGRAMFILES(x86)%\LoadPlanner" ftype LoadPlanner="%PROGRAMFILES(x86)%\LoadPlanner\LpMultiP.exe" "%1"' />
  <upgrade cmd='IF EXIST "%PROGRAMFILES(x86)%\LoadPlanner" cacls "%PROGRAMFILES(x86)%\LoadPlanner" /E /T /G Everyone=f >NUL' />

  <remove  cmd='msiexec %MSI% /x "%SOFTWARE%\LoadPlanner\LoadPlanner 3846.msi"' />
  <remove  cmd='msiexec %MSI% /x "%SOFTWARE%\LoadPlanner\LoadPlanner.msi"' />

</package>

</packages>
