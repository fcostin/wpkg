<?xml version="1.0" encoding="UTF-8"?>

<!--
  NOTES
  1) We set Everyone=F permissions on the LP install folder
  2) Copy data5.mdb and ini.mdb to the source folder after setting up LoadPlanner on another PC
-->

<packages>

<package
  id="loadplanner_32"
  name="LoadPlanner"
  revision="%version%-0"
  reboot="false"
  priority="10">

  <variable name="version" value="3.8.8" />
  <variable name="fileversion" value="3.8.0.8" /> <!-- don't ask why - I don't know... -->
  <variable name="updatefile" value="LoadPlanner 3880 update.msi" />

  <depends package-id="system_tools" />

  <check type="logical" condition="or">
    <check type="uninstall" condition="exists" path="LoadPlanner %version% Update" />
    <check type="file" condition="versiongreaterorequal" path="%PROGRAMFILES%\LoadPlanner\LpMultiP.exe" value="%fileversion%" />
  </check>

  <install cmd='msiexec %MSI% /i "%SOFTWARE%\LoadPlanner\LoadPlanner.msi"' />
  <install cmd='msiexec %MSI% /i "%SOFTWARE%\LoadPlanner\%updatefile%"' />
  <install cmd='%COMSPEC% /c assoc .pjc=LoadPlanner' />
  <install cmd='%COMSPEC% /c ftype LoadPlanner="%PROGRAMFILES%\LoadPlanner\LpMultiP.exe" "%1"' />
  <install cmd='%COMSPEC% /c IF NOT EXIST "%PROGRAMFILES%\LoadPlanner\data5.mdb" XCOPY "%SOFTWARE%\LoadPlanner\*.mdb" "%PROGRAMFILES%\LoadPlanner" /Y' />
  <install cmd='%COMSPEC% /c echo Y | cacls "%PROGRAMFILES%\LoadPlanner" /E /T /G Everyone:f >NUL'><exit code="8023" /></install>

  <upgrade cmd='msiexec %MSI% /i "%SOFTWARE%\LoadPlanner\LoadPlanner.msi"' />
  <upgrade cmd='msiexec %MSI% /i "%SOFTWARE%\LoadPlanner\%updatefile%"' />
  <upgrade cmd='%COMSPEC% /c assoc .pjc=LoadPlanner' />
  <upgrade cmd='%COMSPEC% /c ftype LoadPlanner="%PROGRAMFILES(x86)%\LoadPlanner\LpMultiP.exe" "%1"' />
  <upgrade cmd='%COMSPEC% /c IF NOT EXIST "%PROGRAMFILES%\LoadPlanner\data5.mdb" XCOPY "%SOFTWARE%\LoadPlanner\*.mdb" "%PROGRAMFILES%\LoadPlanner" /Y' />
  <upgrade cmd='%COMSPEC% /c echo Y | cacls "%PROGRAMFILES%\LoadPlanner" /E /T /G Everyone:f >NUL'><exit code="8023" /></upgrade>

  <downgrade cmd='msiexec %MSI% /i "%SOFTWARE%\LoadPlanner\LoadPlanner.msi"' />
  <downgrade cmd='msiexec %MSI% /i "%SOFTWARE%\LoadPlanner\%updatefile%"' />
  <downgrade cmd='%COMSPEC% /c assoc .pjc=LoadPlanner' />
  <downgrade cmd='%COMSPEC% /c ftype LoadPlanner="%PROGRAMFILES(x86)%\LoadPlanner\LpMultiP.exe" "%1"' />
  <downgrade cmd='%COMSPEC% /c IF NOT EXIST "%PROGRAMFILES%\LoadPlanner\data5.mdb" XCOPY "%SOFTWARE%\LoadPlanner\*.mdb" "%PROGRAMFILES%\LoadPlanner" /Y' />
  <downgrade cmd='%COMSPEC% /c echo Y | cacls "%PROGRAMFILES%\LoadPlanner" /E /T /G Everyone:f >NUL'><exit code="8023" /></downgrade>

  <!--
  <remove  cmd='msiexec %MSI% /x "%SOFTWARE%\LoadPlanner\%updatefile%"' />
  -->
  <remove  cmd='msiexec %MSI% /x "%SOFTWARE%\LoadPlanner\LoadPlanner.msi"' />

</package>

