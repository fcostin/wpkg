<?xml version="1.0" encoding="UTF-8"?>

<!--
  NOTES
  1) Where is the 64 bit binary installed??
-->

<packages>

<package
  id="dameware"
  name="DameWare Remote Control Client (automatic 32/64 selection)"
  revision="2"
  reboot="false"
  priority="10">

  <check type="logical" condition="or">
    <check type="file" condition="exists" path="%WINDIR%\system32\DWRCS.exe" />
    <check type="file" condition="exists" path="%WINDIR%\system\DWRCS.exe" />
  </check>

  <install cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "x86" msiexec /i "%SOFTWARE%\DameWare\dwrcs32.msi" %MSI%' />
  <upgrade cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "x86" msiexec /i "%SOFTWARE%\DameWare\dwrcs32.msi" %MSI%' />
  <remove  cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "x86" msiexec /x "%SOFTWARE%\DameWare\dwrcs32.msi" %MSI%' />

  <install cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "AMD64" msiexec /i "%SOFTWARE%\DameWare\dwrcs64.msi" %MSI%' />
  <upgrade cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "AMD64" msiexec /i "%SOFTWARE%\DameWare\dwrcs64.msi" %MSI%' />
  <remove  cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "AMD64" msiexec /x "%SOFTWARE%\DameWare\dwrcs64.msi" %MSI%' />

</package>

</packages>
