<?xml version="1.0" encoding="UTF-8"?>

<!--
  NOTES
  1) visioviewer is always the latest version
  2) Visio 2010 on 32 bit has NOT been tried hence no uninstaller
-->

<packages>

<package
  id="visio2010premium"
  name="MS Visio Premium 2010"
  revision="2010"
  reboot="false"
  priority="10">

  <check type="uninstall" condition="exists" path="Microsoft Visio Premium 2010" />

  <install cmd='%COMSPEC% /c IF "%PROCESSOR_ARCHITECTURE%" == "X86"   "%SOFTWARE%\Visio Premium 2010\setup.exe" %MSI%'>
    <exit code="1641" reboot="postponed" />
    <exit code="3010" reboot="postponed" />
  </install>
  <install cmd='%COMSPEC% /c IF "%PROCESSOR_ARCHITECTURE%" == "AMD64" "%SOFTWARE%\Visio Premium 2010-x64\setup.exe" %MSI%'>
    <exit code="1641" reboot="postponed" />
    <exit code="3010" reboot="postponed" />
  </install>

  <remove  cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "AMD64" "%COMMONFILES%\Microsoft Shared\OFFICE14\Oarpmany.exe" /removereleaseinpatch "{91140000-0057-0000-1000-0000000FF1CE}" "{139222A0-48AF-44FF-BC3B-2112086FAF18}" "1033" "0"'>
    <exit code="3010" />
  </remove>

</package>

<package
  id="visioviewer"
  name="MS Visio Viewer 2010"
  revision="2010-0"
  reboot="false"
  priority="10">

  <check type="logical" condition="or">
    <check type="uninstall" condition="exists" path="Microsoft Visio Viewer 2010" />
    <check type="uninstall" condition="exists" path="Microsoft Visio 2010" />
    <check type="uninstall" condition="exists" path="Microsoft Visio Premium 2010" />
  </check>

  <install cmd='"%SOFTWARE%\Visio Viewer\visioviewer2010.exe" %MSI%' />

  <upgrade cmd='"%SOFTWARE%\Visio Viewer\visioviewer2010.exe" %MSI%' />

  <remove  cmd='msiexec %MSI% /x{95140000-0052-0409-0000-0000000FF1CE}' />

</package>

<package
  id="visioviewer2007"
  name="MS Visio Viewer 2007 SP2"
  revision="2007"
  reboot="false"
  priority="10">

  <check type="logical" condition="or">
    <check type="uninstall" condition="exists" path="Microsoft Office Visio Viewer 2007" />
    <check type="uninstall" condition="exists" path="Microsoft Office Visio 2007" />
  </check>

  <install cmd='"%SOFTWARE%\Visio Viewer\visioviewer2007.exe" %MSI%' />
  <install cmd='"%SOFTWARE%\Visio Viewer\visioviewer2007sp2-kb953335-fullfile-en-us.exe" %MSI%' />

  <upgrade cmd='"%SOFTWARE%\Visio Viewer\visioviewer2007.exe" %MSI%' />
  <upgrade cmd='"%SOFTWARE%\Visio Viewer\visioviewer2007sp2-kb953335-fullfile-en-us.exe" %MSI%' />

  <remove  cmd='msiexec %MSI% /x{95120000-0052-0409-0000-0000000FF1CE}' />

</package>

</packages>
