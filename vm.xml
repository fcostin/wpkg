<?xml version="1.0" encoding="UTF-8"?>

<packages>

<!--
  NOTES
  1) The idea is to change settings for machines running in a VM
-->

<package
  id="vm"
  name="Virtual Machine Settings"
  revision="2"
  reboot="false"
  execute="once">

  <!-- disable hibernation -->
  <install cmd='powercfg -h off' />
  <!-- disable SuperFetch -->
  <install cmd='sc config SysMain start= disabled' />
</package>

</packages>
