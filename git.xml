<?xml version="1.0" encoding="UTF-8"?>
<packages>

<package
  id="git"
  name="Git for Windows"
  revision="1"
  priority="10"
  reboot="false">

  <check type="uninstall" condition="exists" path="Git version 1.7.1preview-20100612" />
  <install   cmd='"%SOFTWARE%\Git\Git-1.7.1-preview20100612.exe" /sp- /verysilent /norestart' />
  <upgrade   cmd='"%SOFTWARE%\Git\Git-1.7.1-preview20100612.exe" /sp- /verysilent /norestart' />
  <downgrade cmd='"%SOFTWARE%\Git\Git-1.7.1-preview20100612.exe" /sp- /verysilent /norestart' />
  <!-- Windows 32-bit -->
  <remove    cmd='%ComSpec% /c if exist "%ProgramFiles%\Git\unins000.exe" "%ProgramFiles%\Git\unins000.exe" /VERYSILENT' />
  <!-- Windows 64-bit -->
  <remove    cmd='%ComSpec% /c if exist "%ProgramFiles(x86)%\Git\unins000.exe" "%ProgramFiles(x86)%\Git\unins000.exe" /VERYSILENT' />
</package>
</packages>
