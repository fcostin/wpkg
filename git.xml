<?xml version="1.0" encoding="UTF-8"?>

<!--
  NOTES
  1) Killing explorer.exe before removing was needed for releases older than Aug 2010
-->

<packages>

<package
  id="git"
  name="Git for Windows"
  revision="%version%-1"
  priority="10"
  reboot="false">

  <variable name="version" value="1.7.2.3" />
  <variable name="reldate" value="20100911" />

  <check type="uninstall" condition="exists" path="Git version %version%-preview%reldate%" />
  <install   cmd='"%SOFTWARE%\Git\Git-%version%-preview%reldate%.exe" /sp- /verysilent /norestart' />
  <upgrade   cmd='"%SOFTWARE%\Git\Git-%version%-preview%reldate%.exe" /sp- /verysilent /norestart' />
  <downgrade cmd='"%SOFTWARE%\Git\Git-%version%-preview%reldate%.exe" /sp- /verysilent /norestart' />
  <remove    cmd='%ComSpec% /c if exist "%ProgramFiles%\Git\unins000.exe"      "%ProgramFiles%\Git\unins000.exe" /VERYSILENT' />
  <remove    cmd='%ComSpec% /c if exist "%ProgramFiles(x86)%\Git\unins000.exe" "%ProgramFiles(x86)%\Git\unins000.exe" /VERYSILENT' />
</package>

</packages>
