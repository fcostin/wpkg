<?xml version="1.0" encoding="UTF-8"?>

<packages>

<package
  id="wpkg"
  name="WPKG"
  revision="2"
  priority="0"
  reboot="false">

  <variable name="version" value="1.3.9" />

  <install   cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "x86"   msiexec %MSI% /i "%SOFTWARE%\WPKG\WPKG Client %version%-x32.msi" TRANSFORMS="%SOFTWARE%\WPKG\wpkg.mst"' />
  <install   cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "AMD64" msiexec %MSI% /i "%SOFTWARE%\WPKG\WPKG Client %version%-x64.msi" TRANSFORMS="%SOFTWARE%\WPKG\wpkg.mst"' />
  <upgrade   cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "x86"   msiexec %MSI% /i "%SOFTWARE%\WPKG\WPKG Client %version%-x32.msi" TRANSFORMS="%SOFTWARE%\WPKG\wpkg.mst"' />
  <upgrade   cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "AMD64" msiexec %MSI% /i "%SOFTWARE%\WPKG\WPKG Client %version%-x64.msi" TRANSFORMS="%SOFTWARE%\WPKG\wpkg.mst"' />
  <downgrade cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "x86"   msiexec %MSI% /i "%SOFTWARE%\WPKG\WPKG Client %version%-x32.msi" TRANSFORMS="%SOFTWARE%\WPKG\wpkg.mst"' />
  <downgrade cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "AMD64" msiexec %MSI% /i "%SOFTWARE%\WPKG\WPKG Client %version%-x64.msi" TRANSFORMS="%SOFTWARE%\WPKG\wpkg.mst"' />
  <remove    cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "x86"   msiexec %MSI% /x "%SOFTWARE%\WPKG\WPKG Client %version%-x32.msi"' />
  <remove    cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "AMD64" msiexec %MSI% /x "%SOFTWARE%\WPKG\WPKG Client %version%-x64.msi"' />

</package>

</packages>

