<?xml version="1.0" encoding="UTF-8"?>
<packages>

<package
  id="sumatrapdf"
  name="Sumatra PDF Reader"
  revision="1"
  priority="10"
  reboot="false">

  <check type="uninstall" condition="exists" path="SumatraPDF" />
  <install cmd='"%SOFTWARE%\SumatraPDF\SumatraPDF-1.1-install.exe" /S' />
  <upgrade cmd='"%SOFTWARE%\SumatraPDF\SumatraPDF-1.1-install.exe" /S' />
  <!-- Windows 32-bit -->
  <remove cmd='%ComSpec% /c if exist "%ProgramFiles%\SumatraPDF\Uninstall.exe" "%ProgramFiles%\SumatraPDF\Uninstall.exe" /S' />
  <!-- Windows 64-bit -->
  <remove cmd='%ComSpec% /c if exist "%ProgramFiles(x86)%\SumatraPDF\Uninstall.exe" "%ProgramFiles(x86)%\SumatraPDF\Uninstall.exe" /S' />
</package>
</packages>
