<?xml version="1.0" encoding="UTF-8"?>
<packages>

<!--
  NOTES
  1) 1.3 cannot be auto-(un)installed. If you do not want to use 1.4, you can use 1.2
-->

<package
  id="sumatrapdf"
  name="Sumatra PDF Reader"
  revision="%version%-0"
  priority="10"
  reboot="false">

  <variable name="version" value="1.5.1" />
  <check type="uninstall" condition="versiongreaterorequal" path="SumatraPDF" value="%version%" />
  <install cmd='"%SOFTWARE%\SumatraPDF\SumatraPDF-%version%-install.exe" /S' />
  <upgrade cmd='"%SOFTWARE%\SumatraPDF\SumatraPDF-%version%-install.exe" /S' />
  <downgrade cmd='"%SOFTWARE%\SumatraPDF\SumatraPDF-%version%-install.exe" /S' />

  <remove cmd='%ComSpec% /c if exist "%ProgramFiles%\SumatraPDF\Uninstall.exe" "%ProgramFiles%\SumatraPDF\Uninstall.exe" /S' />
  <remove cmd='%ComSpec% /c if exist "%ProgramFiles(x86)%\SumatraPDF\Uninstall.exe" "%ProgramFiles(x86)%\SumatraPDF\Uninstall.exe" /S' />

</package>
</packages>
