<?xml version="1.0" encoding="UTF-8"?>

<!--
  NOTES
  1) We install 32 bit libraries on 32 and 64 bit, but 64 only on 64 bit
  2) 2003 doesn't exist as a redistributable, so in order to get the files you need to do the following:
    a) Download from here: http://code.msdn.microsoft.com/KB932298
    b) Unpack using cabextract
    c) Rename msvcp71.dll and msvcr71.dll
-->

<packages>

<package
  id="vcruntime"
  name="Visual C++ Runtime 2005, 2008 and 2010"
  revision="13"
  reboot="false"
  priority="10">

  <variable name='version_2005' value='8.0.56336' />
  <variable name='version_2008' value='9.0.30729' />
  <variable name='version_2010' value='10.0.30319' />

  <!-- We need to escape + to allow it work as a regexp -->
  <check type="uninstall" condition="versiongreaterorequal" path="Microsoft Visual C\+\+ 2005 Redistributable"       value='%version_2005%' />
  <check type="uninstall" condition="versiongreaterorequal" path="Microsoft Visual C\+\+ 2005 Redistributable \(x64\)" value='%version_2005%' architecture="x64"/>
  <check type="uninstall" condition="versiongreaterorequal" path="Microsoft Visual C\+\+ 2008 Redistributable - x86 9\..*" value='%version_2008%' />
  <check type="uninstall" condition="versiongreaterorequal" path="Microsoft Visual C\+\+ 2008 Redistributable - x64 9\..*" value='%version_2008%' architecture="x64"/>
  <check type="uninstall" condition="versiongreaterorequal" path="Microsoft Visual C\+\+ 2010  x86 Redistributable - 10\..*" value='%version_2010%' />
  <check type="uninstall" condition="versiongreaterorequal" path="Microsoft Visual C\+\+ 2010  x64 Redistributable - 10\..*" value='%version_2010%' architecture="x64"/>

  <install cmd='"%SOFTWARE%\Microsoft\VCRuntime\%PROCESSOR_ARCHITECTURE%\vcredist_2005sp1.exe" /Q /R:N'><exit code="3010" /></install>
  <install cmd='"%SOFTWARE%\Microsoft\VCRuntime\%PROCESSOR_ARCHITECTURE%\vcredist_2008sp1.exe" /Q /R:N'><exit code="3010" /></install>
  <install cmd='"%SOFTWARE%\Microsoft\VCRuntime\%PROCESSOR_ARCHITECTURE%\vcredist_2010.exe" /Q /R:N'>   <exit code="3010" /></install>
  <install cmd='"%SOFTWARE%\Microsoft\VCRuntime\x86\vcredist_2005sp1.exe" /Q /R:N' architecture="x64"><exit code="3010" /></install>
  <install cmd='"%SOFTWARE%\Microsoft\VCRuntime\x86\vcredist_2008sp1.exe" /Q /R:N' architecture="x64"><exit code="3010" /></install>
  <install cmd='"%SOFTWARE%\Microsoft\VCRuntime\x86\vcredist_2010.exe" /Q /R:N'    architecture="x64"><exit code="3010" /></install>
  <install cmd='%COMSPEC% /C DEL C:\eula.*.txt C:\install.* C:\VC_RED.* C:\vcredist.bmp C:\msdia80.dll C:\globdata.ini'><exit code="any" /></install>

  <upgrade   include="install" />
  <downgrade include="install" />

</package>

<package
  id="vcruntime_2003"
  name="Visual C++ Runtime 2003 SP1"
  revision="2"
  reboot="false"
  priority="10">

  <check type="logical" condition="and">
    <check type="file" condition="versiongreaterorequal" path="%WINDIR%\msvcp71.dll" value="7.10.6052.0" />
    <check type="file" condition="versiongreaterorequal" path="%WINDIR%\msvcr71.dll" value="7.10.7031.4" />
  </check>

  <install   cmd='%COMSPEC% /C xcopy "%SOFTWARE%\Microsoft\VCRuntime\x86\msvc?71.dll" "%WINDIR%" /Y' />
  <upgrade   include="install" />
  <downgrade include="install" />
  <remove    cmd='%COMSPEC% /c del /Q /F "%WINDIR%\msvc?71.dll"' />
</package>

</packages>
