<?xml version="1.0" encoding="UTF-8"?>

<!--
  NOTES
  1) Extract the MSIs from the .exe you download from nitropdf.com by using /EXTRACTMSI:"path_to_msi_file"
-->

<packages>

<package
  id="nitropdfpro"
  name="NitroPDF 6 Pro"
  revision="%version%-0"
  reboot="false"
  priority="10">


  <variable name="version" value="6.1.4.1" />

  <check type="logical" condition="or">
    <check type="uninstall" condition="versiongreaterorequal" path="Nitro PDF Professional"          value="%version%" />
    <check type="uninstall" condition="versiongreaterorequal" path="Nitro PDF Professional (64-bit)" value="%version%" />
  </check>

  <install   cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "x86"   msiexec %MSI% /i "%SOFTWARE%\NitroPDF\nitro_x86.msi"' />
  <install   cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "AMD64" msiexec %MSI% /i "%SOFTWARE%\NitroPDF\nitro_x64.msi"' />
  
  <upgrade   cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "x86"   msiexec %MSI% /i "%SOFTWARE%\NitroPDF\nitro_x86.msi"' />
  <upgrade   cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "AMD64" msiexec %MSI% /i "%SOFTWARE%\NitroPDF\nitro_x64.msi"' />

  <downgrade cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "x86"   msiexec %MSI% /i "%SOFTWARE%\NitroPDF\nitro_x86.msi"' />
  <downgrade cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "AMD64" msiexec %MSI% /i "%SOFTWARE%\NitroPDF\nitro_x64.msi"' />

  <remove    cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "x86"   msiexec %MSI% /x "%SOFTWARE%\NitroPDF\nitro_x86.msi"' />
  <remove    cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "AMD64" msiexec %MSI% /x "%SOFTWARE%\NitroPDF\nitro_x64.msi"' />

</package>

<package
  id="nitropdfproocr"
  name="NitroPDF 6 Pro OCR"
  revision="%version%-0"
  reboot="false"
  priority="10">

  <variable name="version" value="6.1.4.1" />

  <check type="logical" condition="or">
    <check type="uninstall" condition="versiongreaterorequal" path="Nitro PDF Professional"          value="%version%" />
    <check type="uninstall" condition="versiongreaterorequal" path="Nitro PDF Professional (64-bit)" value="%version%" />
  </check>

  <install   cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "x86"   msiexec %MSI% /i "%SOFTWARE%\NitroPDF\nitro_ocr_x86.msi"' />
  <install   cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "AMD64" msiexec %MSI% /i "%SOFTWARE%\NitroPDF\nitro_ocr_x64.msi"' />
  
  <upgrade   cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "x86"   msiexec %MSI% /i "%SOFTWARE%\NitroPDF\nitro_ocr_x86.msi"' />
  <upgrade   cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "AMD64" msiexec %MSI% /i "%SOFTWARE%\NitroPDF\nitro_ocr_x64.msi"' />

  <downgrade cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "x86"   msiexec %MSI% /i "%SOFTWARE%\NitroPDF\nitro_ocr_x86.msi"' />
  <downgrade cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "AMD64" msiexec %MSI% /i "%SOFTWARE%\NitroPDF\nitro_ocr_x64.msi"' />

  <remove    cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "x86"   msiexec %MSI% /x "%SOFTWARE%\NitroPDF\nitro_ocr_x86.msi"' />
  <remove    cmd='%COMSPEC% /C IF "%PROCESSOR_ARCHITECTURE%" == "AMD64" msiexec %MSI% /x "%SOFTWARE%\NitroPDF\nitro_ocr_x64.msi"' />

</package>

</packages>
