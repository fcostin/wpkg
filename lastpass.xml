<?xml version="1.0" encoding="UTF-8"?>

<!--
  1) After downloading the 32 and 64 bit installers, please rename them to lastpass.exe and place them in the proper directories
  2) 64 bit installer automatically installs 32bit plugins too
 -->

<packages>

<package
  id="lastpass"
  name="LastPass browser plugins, IE, Firefox, Chrome"
  revision="%version%-0"
  priority="10"
  reboot="false">

  <variable name="version" value="1.75.0.0" />
  <check type="file" condition="versiongreaterorequal" path="%PROGRAMFILES%\LastPass\lastpass.exe" value="%version%" />
  <install   cmd='"%SOFTWARE%\LastPass\%PROCESSOR_ARCHITECTURE%\lastpass.exe" -i -f -ia --installdir="%PROGRAMFILES%\LastPass"' />
  <upgrade   cmd='"%SOFTWARE%\LastPass\%PROCESSOR_ARCHITECTURE%\lastpass.exe" -i -f -ia --installdir="%PROGRAMFILES%\LastPass"' />
  <downgrade cmd='"%SOFTWARE%\LastPass\%PROCESSOR_ARCHITECTURE%\lastpass.exe" -i -f -ia --installdir="%PROGRAMFILES%\LastPass"' />
  <remove    cmd='"%SOFTWARE%\LastPass\%PROCESSOR_ARCHITECTURE%\lastpass.exe" -sb' />

</package>

</packages>
