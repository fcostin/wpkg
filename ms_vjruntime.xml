<?xml version="1.0" encoding="UTF-8"?>

<!--
  NOTES
  1) Extract the redistributables to
     %SOFTWARE%\VJRuntime\%PROCESSOR_ARCHITECTURE%.
-->

<packages>

<package
  id="vjruntime"
  name="Visual J# Runtime"
  revision="%version%-0"
  reboot="false"
  priority="10">

  <!-- Needs >= .NET 2.0 -->
  <depends package-id="dotnet3" />

  <check type="uninstall" condition="exists" path="Microsoft Visual J# 2.0 Redistributable Package - SE" />
  <variable name="version" value="2.0.50728" />

  <install cmd='"%SOFTWARE%\VJRuntime\%PROCESSOR_ARCHITECTURE%\install.exe" /q'>
    <exit code='1641' reboot="postponed" />
    <exit code='3010' reboot="postponed" />
  </install>
  <upgrade cmd='"%SOFTWARE%\VJRuntime\%PROCESSOR_ARCHITECTURE%\install.exe" /q'>
    <exit code='1641' reboot="postponed" />
    <exit code='3010' reboot="postponed" />
  </upgrade>
  <downgrade cmd='"%SOFTWARE%\VJRuntime\%PROCESSOR_ARCHITECTURE%\install.exe" /q'>
    <exit code='1641' reboot="postponed" />
    <exit code='3010' reboot="postponed" />
  </downgrade>

  <remove cmd='"%SOFTWARE%\VJRuntime\%PROCESSOR_ARCHITECTURE%\install.exe" /qu'>
    <exit code='3010' reboot="postponed" />
  </remove>
</package>

</packages>
