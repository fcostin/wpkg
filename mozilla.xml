<packages>

<package
  id="firefox"
  name="Mozilla Firefox"
  revision="%version%-0"
  reboot="false"
  priority="10">

  <variable name="version" value="3.6.13" />
  <check type="uninstall" condition="exists" path="Mozilla Firefox (%version%)" />
  <install   cmd='"%SOFTWARE%\Firefox\Firefox Setup %version%.exe" /S /INI="%SOFTWARE%\Firefox\installer.ini"' />
  <upgrade   cmd='"%SOFTWARE%\Firefox\Firefox Setup %version%.exe" /S /INI="%SOFTWARE%\Firefox\installer.ini"' />
  <downgrade cmd='"%SOFTWARE%\Firefox\Firefox Setup %version%.exe" /S /INI="%SOFTWARE%\Firefox\installer.ini"' />
  <remove cmd='%ComSpec% /c if exist "%ProgramFiles%\Mozilla Firefox\uninstall\helper.exe" "%ProgramFiles%\Mozilla Firefox\uninstall\helper.exe" /S' />
  <remove cmd='%ComSpec% /c if exist "%ProgramFiles(x86)%\Mozilla Firefox\uninstall\helper.exe" "%ProgramFiles(x86)%\Mozilla Firefox\uninstall\helper.exe" /S' />

</package>

<package
  id="thunderbird"
  name="Mozilla Thunderbird"
  revision="%version%-0"
  reboot="false"
  priority="10">

  <variable name="version" value="1.5" />
  <check type="uninstall" condition="exists" path="Mozilla Thunderbird (%version%)" />
  <install cmd='"%SOFTWARE%\Thunderbird\Thunderbird Setup 1.5.0.4.exe" -ms' />
  <upgrade cmd='"%SOFTWARE%\Thunderbird\Thunderbird Setup 1.5.0.4.exe" -ms' />
  <remove  cmd='%ComSpec% /c if exist "%ProgramFiles%\Mozilla Thunderbird\uninstall\uninstall.exe" "%PROGRAMFILES%\Mozilla Thunderbird\uninstall\uninstall.exe" -ms' />
  <remove  cmd='%ComSpec% /c if exist "%ProgramFiles(x86)%\Mozilla Thunderbird\uninstall\uninstall.exe" "%PROGRAMFILES(x86)%\Mozilla Thunderbird\uninstall\uninstall.exe" -ms' />

</package>

</packages>
