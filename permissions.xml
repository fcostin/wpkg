<?xml version="1.0" encoding="UTF-8"?>

<!--
  NOTES
  1) Here we grant special permissions to normal users so that it's possible to actually use the machine when running as standard user
-->

<packages>

<package
  id="power_permissions"
  name="Power permissions"
  revision="3"
  reboot="false"
  priority="10"
  execute="once">

  <install cmd='"%SOFTWARE%\SystemTools\subinacl.exe" /subkeyreg "SOFTWARE\Microsoft\Windows\CurrentVersion\Controls Folder\PowerCfg" /grant=Everyone=f >NUL' />

</package>

<package
  id="network_permissions"
  name="Network permissions"
  revision="3"
  reboot="false"
  priority="10"
  execute="once">

  <install cmd='net localgroup "Network Configuration Operators" Everyone /ADD >NUL'>
    <exit code="2" /> <!-- Already member -->
  </install>

</package>

</packages>
