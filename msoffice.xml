  <check type="uninstall" condition="exists" path="Microsoft Office Standard 2007" />

  <install cmd='"%SOFTWARE%\MS Office Std 2007 SP2\setup.exe"'>
    <exit code="1641" reboot="postponed" />
    <exit code="3010" reboot="postponed" />
