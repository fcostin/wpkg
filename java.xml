    <exit code="3010" reboot="postponed" />
    <exit code="0" />
  </install>
  <install cmd='REG ADD "HKLM\SOFTWARE\JavaSoft\Java Update\Policy" /v EnableAutoUpdateCheck /t REG_DWORD /d 0 /f' />
